<root xmlns="http://www.impalaframework.org/schema/moduledefinition"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation=
      	"http://www.impalaframework.org/schema/moduledefinition http://impala.googlecode.com/svn/schema/moduledefinition.xsd">
    <names>
    example-hibernate
    example-dao
    example-optional
    example-service
    example-web
    example-servlet1
    example-servlet2
    example-servlet3
    example-servlet4
    </names>
    <modules>  
        <module>
            <name>example-dao</name>
            <type>application</type>
            <config-locations>
                <config-location>example-dao-context.xml</config-location>
            </config-locations>
        </module>  
        <module>
            <name>example-web</name>
            <config-locations>
                <config-location>example-web.xml</config-location>
            </config-locations>
        </module>
        <module>
            <name>example-servlet1</name>
            <config-locations>
                <config-location>example-servlet1-context.xml</config-location>
            </config-locations>
        </module>
        <module>
            <name>example-servlet2</name>
            <config-locations>
                <config-location>example-servlet2-context.xml</config-location>
            </config-locations>
        </module>
        <module>
            <name>example-servlet3</name>
            <config-locations>
                <config-location>example-servlet3-context.xml</config-location>
            </config-locations>
        </module>
    </modules>
</root>
