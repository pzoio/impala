<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans.xsd">

 <!-- ############## Path mapper definitions ############### -->
 
 <bean id="mappedModuleMapper" class="org.impalaframework.web.integration.MappedRequestModuleMapper">
 </bean>
 
 <bean id="requestModuleMapper" class="org.impalaframework.web.integration.CompositeRequestModuleMapper">
    <property name="requestModuleMappers">  
        <list> 
            <ref local = "mappedModuleMapper"/>
            <ref bean = "servletPathRequestModuleMapper"/>
            <ref bean = "topLevelPathContainsModuleMapper"/>
        </list>  
    </property> 
 </bean>
 
  <bean id="servletRootModuleLoader" 
     parent = "baseModuleLoader"
     class="org.impalaframework.web.integration.ServletRootModuleLoader">
     <property name = "servletContextWrapper" ref = "servletContextWrapper"/>
 </bean> 
 
  <bean id="extraWebModuleLoaderWebContributions" class="org.impalaframework.spring.module.registry.NamedBeanRegistryContributor">
    <property name = "registryBeanName" value = "moduleLoaderRegistry"/>
    <property name = "contributions">
        <map>
            <entry key="servletRootModuleLoader" value="spring-servlet_root"/>
        </map>
    </property> 
 </bean>
 
</beans>
