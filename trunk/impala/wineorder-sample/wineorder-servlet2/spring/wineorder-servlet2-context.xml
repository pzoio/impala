<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"       
	   xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

	<bean class="org.impalaframework.web.generic.ServletFactoryBean">
		<property name = "servletName" value = "wineorder-servlet2"/>
		<property name = "servletClass" value = "org.impalaframework.web.servlet.InternalModuleServlet"/>
	</bean>	

	<!-- Use url: http://localhost:8080/wineorder/servlet2/test.to
	Note the suffix because of the redirection from the module servlet -->
	<bean name="/servlet2/test.to" class="TestController2">
		<property name = "wineMerchant" ref = "wineMerchant"/>
	</bean>
	
	<bean id="handlerMapping" class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"/>
		
	<bean id="jspViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		  <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
		  <property name="suffix" value=".jsp"/>
	</bean>
	
</beans>