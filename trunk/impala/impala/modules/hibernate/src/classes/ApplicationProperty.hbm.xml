<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	
	<class name="domain.ApplicationProperty" table="application_property">
		<id name="id" column="id" type="java.lang.Long" length="32" unsaved-value="null">
			<generator class="increment"/>
		</id>
		
		<property name="name" type="string" length="80" not-null="true"/>
		<property name="value" type="string" length="1024"/>
	</class>
	
</hibernate-mapping>