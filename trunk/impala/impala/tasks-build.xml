<?xml version="1.0"?>
<project name="Impala Tasks Build">
	
	<description>Contains entries for setting up tasks</description>
		
	<fail unless = "impala.home" message = "'impala.home' property not set"/>
	<import file = "${impala.home}/classpath-build.xml"/>	
	
	<taskdef 
		name = "download" 
		classname="org.impalaframework.ant.DownloadTask" 
		classpathref = "full.classpath"
		onerror = "report"/>
	
	<taskdef 
		name = "ifproperty" 
		classname="org.impalaframework.ant.IfPropertyTask" 
		classpathref = "full.classpath"
		onerror = "report"/>
	
	<taskdef 
		name = "antforeach" 
		classname="org.impalaframework.ant.AntForeachTask" 
		classpathref = "full.classpath"
		onerror = "report"/>

</project>
