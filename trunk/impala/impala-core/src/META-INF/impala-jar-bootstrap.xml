<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	
 <bean id="applicationVersion" class="org.impalaframework.bean.SystemPropertiesFactoryBean">
	 <property name="properties" value="locationProperties"/>
	 <property name="propertyName" value="application.version"/>
 </bean>	
	
 <bean id="moduleLocationResolver" 
	 class="org.impalaframework.resolver.SimpleJarModuleLocationResolver" 
	 init-method="init">
	 <property name="applicationVersion" ref = "applicationVersion"/>
	 <property name="workspaceRoot" ref="workspaceRoot"/>
	 <property name="rootProjectString" ref="rootProjects"/>
 </bean>

</beans>