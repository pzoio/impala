<web-app>
	<listener>
		<listener-class>org.impalaframework.web.loader.ImpalaContextLoaderListener</listener-class>
	</listener>
	
	<context-param>
		<param-name>contextLoaderClassName</param-name>
		<param-value>org.impalaframework.web.loader.WebXmlBasedContextLoader</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>parent-context.xml</param-value>
	</context-param>
	<context-param>
		<param-name>moduleNames</param-name>
		<param-value>example-dao, example-hibernate, example-service ()</param-value>
	</context-param>
	<context-param>
		<param-name>rootWebModule</param-name>
		<param-value>example-web</param-value>
	</context-param>
	<context-param>
		<param-name>webappConfigLocation</param-name>
		<param-value>example-web.xml</param-value>
	</context-param>

	<context-param>
		<param-name>bootstrapModulesResource</param-name>
		<param-value>moduledefinitions.xml</param-value>
	</context-param>	
	<context-param>
		<param-name>rootProjectNames</param-name>
		<param-value>example</param-value>
	</context-param>	
    <servlet>
        <servlet-name>example-web</servlet-name>
        <servlet-class>org.impalaframework.web.servlet.RootWebModuleServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>example-web</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>example-servlet1</servlet-name>
        <servlet-class>org.impalaframework.web.servlet.WebModuleServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>example-servlet1</servlet-name>
        <url-pattern>*.do1</url-pattern>
    </servlet-mapping>	
    <servlet>
        <servlet-name>example-servlet2</servlet-name>
        <servlet-class>org.impalaframework.web.servlet.WebModuleServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>example-servlet2</servlet-name>
        <url-pattern>*.do2</url-pattern>
    </servlet-mapping>
</web-app>