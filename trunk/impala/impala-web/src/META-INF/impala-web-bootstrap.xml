<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
 	
 <bean id="rootModuleLoader" class="org.impalaframework.web.module.WebClasspathModuleLoader">
	<constructor-arg ref="moduleLocationResolver"/>
 </bean>	
	
 <bean id="webRootPluginLoader" class="org.impalaframework.web.module.WebRootModuleLoader">
	<constructor-arg ref="moduleLocationResolver"/>
 </bean>	
	
 <bean id="servletPluginLoader" class="org.impalaframework.web.module.ServletModuleLoader">
	<constructor-arg ref="moduleLocationResolver"/>
 </bean>	
	
 <bean id="webPlaceholderPluginLoader" class="org.impalaframework.web.loader.WebPlaceholderDelegatingContextLoader"/>			
	
 <bean id="moduleLoaderRegistry" class="org.impalaframework.module.loader.ModuleLoaderRegistry">
	<property name = "moduleLoaders">
		<map>
			<entry key="root" value-ref="rootModuleLoader"/>
			<entry key="application" value-ref="applicationModuleLoader"/>
			<entry key="application_with_beansets" value-ref="applicationBeansetModuleLoader"/>
			<entry key="web_root" value-ref="webRootPluginLoader"/>
			<entry key="servlet" value-ref="servletPluginLoader"/>
		</map>
	</property>	
	<property name = "delegatingLoaders">
		<map>
			<entry key="web_placeholder" value-ref="webPlaceholderPluginLoader"/>
		</map>
	</property>  
 </bean>

</beans>