<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="parentClassLoaderFirst" class="org.impalaframework.spring.bean.StringFactoryBean">
	 <property name="value" value="true"/>
  </bean>

  <bean id="locationPropertiesResourceName" class="org.impalaframework.web.spring.bean.SystemPropertyServletContextParamFactoryBean">
	  <property name="parameterName" value="bootstrapLocationsResource"/>
	  <property name="defaultValue" value="impala.properties"/>
	  <property name="prefix" value="classpath:"/>
  </bean>	
 	
  <bean id="locationProperties" class="org.impalaframework.spring.bean.OptionalPropertiesFactoryBean">
	  <property name="location" ref="locationPropertiesResourceName"/>
  </bean>	
	
  <bean id="moduleLocationResolver" 
	 class="org.impalaframework.web.resolver.ServletContextModuleLocationResolver">
	 <property name="applicationVersion" ref="applicationVersion"/>
  </bean>
	
</beans>