<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
 	
  <bean id="locationProperties" class="org.impalaframework.bean.OptionalPropertiesFactoryBean">
	  <property name="location" value="classpath:web-module.properties"/>
  </bean>	
	
  <bean id="moduleLocationResolver" 
	 class="org.impalaframework.web.resolver.ServletContextModuleLocationResolver">
	 <property name="applicationVersion" ref="applicationVersion"/>
	 <property name="rootProjectsString" ref="rootProjects"/>
  </bean>
	
</beans>