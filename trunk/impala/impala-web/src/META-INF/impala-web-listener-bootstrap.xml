<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	
 <bean id="scheduledPluginMonitor" class="org.impalaframework.module.monitor.ScheduledModuleChangeMonitorBean">
	<property name = "modificationListeners">
		<list>
			<bean class="org.impalaframework.web.module.WebModuleChangeListener"/>
		</list>
	</property> 
 </bean>	
	
 <bean id="applicationContextLoader" class="org.impalaframework.module.loader.DefaultApplicationContextLoader">
	<constructor-arg ref="moduleLoaderRegistry"/>	
	<property name="moduleChangeMonitor" ref="scheduledPluginMonitor"/>  
 </bean>

</beans>