<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	
 <bean id="scheduledModuleChangeMonitor" class="org.impalaframework.module.monitor.ScheduledModuleChangeMonitorBean">
	<property name = "modificationListeners">
		<list>
			<bean class="org.impalaframework.web.module.listener.WebModuleChangeListener"/>
		</list>
	</property> 
 </bean>	
 
 <bean id="springModuleRuntime" class="org.impalaframework.spring.module.SpringModuleRuntime">  
	<property name = "applicationContextLoader" ref="applicationContextLoader"/>	    
	<property name = "moduleStateHolder" ref="moduleStateHolder"/> 
	<property name="moduleLoaderRegistry" ref="moduleLoaderRegistry"/>	
	<property name="moduleChangeMonitor" ref="scheduledModuleChangeMonitor"/>  	  
 </bean>

</beans>