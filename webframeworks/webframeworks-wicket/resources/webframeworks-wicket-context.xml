<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- Access this servlet via http://localhost:8080/webframework-web/servlet3/test.to -->
	<bean class="org.impalaframework.web.integration.InternalFrameworkIntegrationServletFactoryBean">
		<property name = "servletName" value = "webframeworks-wicket"/>
		<property name = "servletClass" value = "org.impalaframework.web.integration.InternalFrameworkIntegrationServlet"/>
		<property name = "delegateServlet" ref = "delegateServlet"/>
	</bean>	
	
	<bean id = "delegateServlet" class="wicket.WicketServletFactoryBean">
		<property name = "servletName" value = "delegateServlet"/>
		<property name = "servletClass" value = "wicket.WicketServlet"/>
		<property name = "initParameters">
			<map>
				<entry key="applicationClassName" value = "wicket.WicketApplication"/>
			</map>
		</property>
	</bean>

</beans>
